---
import Hero from "./Hero.astro";
import Project from "./Project.astro";
import { PROJECTS } from "../constants/projects";

// TODO: years dynamic
export const hero = {
  title: "Things I've worked on trying to put my dent in the universe.",
  description:
    "I've worked with dozens inspiring people and on tons of projects over the last 15 years. These are the projects which i am most proud of."
};
---

<section>
  <Hero {...hero} />

  <ul
    class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3 my-16 sm:mt-20"
  >
    {
      PROJECTS.map((project) => {
        return (
          <li class="group relative flex flex-col items-start">
            <Project {...project} />
          </li>
        );
      })
    }
  </ul>
</section>
