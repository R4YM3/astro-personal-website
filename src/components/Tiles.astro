---
import Tile from "./Tile.astro";
import photo1 from "../images/photos/image-1.jpg";
import photo3 from "../images/photos/image-3.jpg";
import photo5 from "../images/photos/image-5.jpg";
import photo4 from "../images/photos/image-4.jpg";
import photo7 from "../images/photos/image-7.jpg";
---

<section class="relative mt-16 sm:mt-20 z-10">
  <header class="hidden">
    <h3>Photo's of Raymond Schweers</h3>
  </header>

  <ul class="-my-4 flex justify-center gap-5 py-4 sm:gap-8 overflow-scroll sm:overflow-visible">
    <Tile
      imageUrl={photo1}
      woggleToRight
      width="1080"
      height="1080"
      alt="Climbing"
    />
    <Tile imageUrl={photo3} width="1080" height="1080" alt="Kiting" />
    <Tile
      imageUrl={photo7}
      woggleToRight
      width="1080"
      height="1080"
      alt="Wild camping"
    />
    <Tile imageUrl={photo4} width="1080" height="1080" alt="Family" />
    <Tile
      imageUrl={photo5}
      woggleToRight
      width="1080"
      height="1080"
      alt="Outdoor"
    />
  </ul>
</section>
